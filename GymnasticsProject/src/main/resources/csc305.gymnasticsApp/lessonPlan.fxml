<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc305.gymnasticsApp.LessonPlanController">
   <children>
      <VBox alignment="CENTER" spacing="35.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField alignment="CENTER" editable="false" minHeight="75.0" minWidth="450.0" style="-fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 10px;" text="Lesson Plan Configuration">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </TextField>
            <TextField alignment="CENTER" editable="false" minHeight="25.0" minWidth="450.0" style="-fx-background-color: grey; -fx-background-radius: 10px; -fx-text-fill: white;" text="Events in Lesson">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </TextField>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <CheckBox fx:id="threeCPLCheckbox" minWidth="60.0" mnemonicParsing="false" onAction="#handleCheckboxChanged" text="3">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="fourCPLCheckbox" minWidth="60.0" mnemonicParsing="false" onAction="#handleCheckboxChanged" text="4">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="fiveCPLCheckbox" minWidth="60.0" mnemonicParsing="false" onAction="#handleCheckboxChanged" text="5">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="100.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonHandle" prefHeight="52.0" prefWidth="99.0" style="-fx-background-color: Grey; -fx-text-fill: white;" styleClass="hover-grow-button" stylesheets="@buttonHover.css" text="Back" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="doneButton" mnemonicParsing="false" onAction="#doneButtonHandle" prefHeight="52.0" prefWidth="99.0" style="-fx-background-color: Grey; -fx-text-fill: white;" styleClass="hover-grow-button" stylesheets="@buttonHover.css" text="Next" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
